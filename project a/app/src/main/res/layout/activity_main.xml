<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/biorhyme"
        android:text="Grade calculator"
        android:textColor="#03A9F4"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/grade"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="@font/electrolize"
        android:hint="Quizes %15 "
        android:textColorHint="#304860"
        android:inputType="textPersonName"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/HW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Quiz"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="@font/electrolize"
        android:hint="HomeWork %25"
        android:textColorHint="#304860"
        android:inputType="textPersonName"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/Mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/HW"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="@font/electrolize"
        android:hint="Mid terms %30"
        android:textColorHint="#304860"
        android:inputType="textPersonName"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/Final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Mid"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="@font/electrolize"
        android:hint="Final %30"
        android:textColorHint="#304860"
        android:inputType="textPersonName"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Final"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/calculate"
        android:fontFamily="@font/amaranth"
        android:text="calculate"
        android:textColor="#03A9F4"
        android:textSize="21sp" />

</RelativeLayout>